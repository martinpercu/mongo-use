use("tester_store")

db.createCollection('users', {
  validator: {
    $jsonSchema: {
      bsonType: 'object',
      required: ['email', 'password', 'admin'],
      additionalProperties: true, // if false not allow to add anything different
      properties: {
        name: {
          bsonType: 'string'
        },
        last_name: {
          bsonType: 'string'
        },
        email: {
          bsonType: 'string'
        },
        password: {
          bsonType: 'string',
          pattern: "^[A-Za-z0-9]{8,}$",
        },
        age: {
          bsonType: 'number',
          minimum: 18,
          maximum: 99
        },
        isSingle: {
          bsonType: 'bool'
        },
        role: {
          enum: ['customer', 'seller', 'admin']
        }
      }
    }
  }
})
